{
  "name": "pomodoro",
  "productName": "Pomodoro",
  "version": "0.0.1",
  "description": "Pomodoro timer build with electron",
  "license": "MIT",
  "repository": "https://github.com/G07cha/pomodoro.git",
  "author": "g07cha",
  "engines": {
    "node": ">=4"
  },
  "electronVersion": "1.0.1",
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "production": "npm run clean && npm run build && npm run package",
    "clean": "rm -rf ./dist",
    "build": "npm run build-osx && npm run build-win",
    "build-osx": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --overwrite --prune --arch=all --platform=darwin --icon=./icons/icon.icns --version=$npm_package_electronVersion",
    "build-win": "electron-packager . $npm_package_productName --out=dist --arch=all --platform=win32 --ignore='^/dist$' --prune --overwrite --icon=./icons/icon.ico --version=$npm_package_electronVersion",
    "package": "npm run package-win32 && npm run package-win64 && npm run package-osx",
    "package-win64": "electron-builder dist/pomodoro-win32-x64/ --platform=win --out=dist --config=config.json && mv 'dist/Pomodoro Setup.exe' dist/Pomodoro_Windows64.exe",
    "package-win32": "electron-builder dist/pomodoro-win32-ia32 --platform=win --out=dist --config=config.json && mv 'dist/Pomodoro Setup.exe' dist/Pomodoro_Windows32.exe",
    "package-osx": "electron-builder dist/pomodoro-darwin-x64/pomodoro.app --platform=osx --out=dist --config=config.json"
  },
  "dependencies": {
    "auto-launch": "^2.0.1",
    "human-readable-time": "^0.2.0",
    "jquery": "^2.2.4",
    "menubar": "^4.1.1",
    "photon": "git+https://github.com/connors/photon.git",
    "timer-stopwatch": "0.1.6"
  },
  "devDependencies": {
    "devtron": "^1.0.1",
    "electron-builder": "^4.2.2",
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^1.0.1"
  }
}
